.notice {
  display: block;
  position: fixed;
  top: 65rpx;
  left: 0;
  z-index: 999;
  width: 100%;
}
.notice-text {
  font-size: 32rpx;
  color: #53bc64;
}
.site-popup,
.time-popup {
  box-sizing: border-box;
  position: absolute;
  z-index: 99999;
  left: 0;
  border: none;
  background: #fff;
  text-align: center;
  border: 1rpx solid #fff;
}
.popup__content {
  position: absolute;
  left: 0;
  bottom: 120rpx;
  z-index: 13333;
  width: 100%;
  height: auto;
  line-height: 120rpx;
  text-align: center;
  background: #ffffff;
}
.text22 {
  color: #333333;
  font-size: 32rpx;
}
.bus-container {
  margin-top: 160rpx;
  padding-bottom: 140rpx;
}
.botton-menu {
  display: block;
  box-sizing: border-box;
  position: fixed;
  z-index: 999;
  left: 0;
  bottom: 0;
  width: 100%;
  padding: 10rpx 60rpx;
  background: rgba(0, 0, 0, 0.6);
  height: 120rpx;
  text-align: center;
  color: #53bc64;
  font-size: 22rpx;
  vertical-align: middle;
}
.botton-menu .icon {
  width: 48rpx;
  height: 48rpx;
}
.buy-button {
  background: #53bc64;
  color: #fff;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
}
.buy-button1 {
  background: #bbbec4;
  color: #fff;
  padding: 10rpx 24rpx;
  border-radius: 24rpx;
}
.ticket_status {
  vertical-align: bottom;
}
.ticket_status .mylabel {
  margin-left: 30rpx;
}
.price-container {
  display: block;
  line-height: 100rpx;
  min-width: 100rpx;
  height: 100%;
}
.myprice {
  font-size: 36rpx;
  font-weight: bold;
  color: #ff4422;
  line-height: 120rpx;
}
.myprice1 {
  font-size: 24rpx;
  font-weight: bold;
  color: #333333;
}
.top {
  background: #fff;
  position: fixed;
  top: 0;
  left: 0;
  width: 100%;
  z-index: 9999;
}
.flex-container {
  position: relative;
  z-index: 6;
  box-sizing: border-box;
  display: block;
  width: 96%;
  margin: 20rpx 2% 0 2%;
  padding: 20rpx 30rpx 20rpx 30rpx;
  background: #fff;
}
.myflex {
  display: block;
  padding: 10rpx 10rpx;
  font-size: 24rpx;
}
.myflex1 {
  display: block;
  padding: 30rpx 30rpx 30rpx 30rpx;
  font-size: 24rpx;
}
.myflex1:nth-child(4) {
  padding-bottom: 0rpx;
}
.m-flex {
  padding: 5rpx 20rpx;
  border: 1rpx #53bc64 solid;
  border-radius: 8rpx;
  color: #53bc64;
  margin-top: -4rpx;
}
.f-flex {
  color: #53bc64;
}
.bottom + .bottom {
  border-top: 1rpx #dddee1 solid;
}
.goto-pic {
  width: 140rpx;
  height: 30rpx;
  margin-top: -10rpx;
  margin-bottom: 10rpx;
}
.bus-top {
  border-bottom: 1rpx dashed #dddee1;
  line-height: 2;
  padding: 20rpx 30rpx;
  text-align: center;
}
.start-time,
.end-time {
  font-size: 36rpx;
  font-weight: bold;
}
.start-time {
  text-shadow: 2rpx 2rpx 8rpx #eee;
}
.start-site {
  font-size: 28rpx;
}
.mid-flex {
  line-height: 1;
  margin-top: 30rpx;
}
